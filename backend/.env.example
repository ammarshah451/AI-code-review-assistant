# ============================================================
# CodeGuard AI - Environment Configuration
# ============================================================
# Copy this file to .env and fill in your values
# All fields marked [REQUIRED] must be set for the app to work
# ============================================================

# -----------------------------
# Application Settings
# -----------------------------
ENVIRONMENT=development
DEBUG=true

# CORS (comma-separated origins for frontend)
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# -----------------------------
# [REQUIRED] Database (Supabase)
# -----------------------------
# Get from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
# IMPORTANT: Use the "service_role" key, NOT the "anon" key!
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_KEY=your-supabase-service-role-key-here

# -----------------------------
# [REQUIRED] LLM Provider
# -----------------------------
# Google Gemini (recommended - best free tier)
# Get from: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your-google-api-key-here

# Which model to use
LLM_MODEL=gemini-2.5-flash

# -----------------------------
# [REQUIRED] GitHub
# -----------------------------
# Personal Access Token for API calls
# Get from: https://github.com/settings/tokens
# Required scopes: repo, read:org
GITHUB_TOKEN=your-github-personal-access-token-here

# -----------------------------
# [OPTIONAL] Redis Queue (Upstash)
# -----------------------------
# Get from: https://console.upstash.com/ -> Create Redis Database
# Without this, jobs run synchronously (fine for development)
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token-here

# -----------------------------
# [OPTIONAL] GitHub Webhooks
# -----------------------------
# Only needed if setting up GitHub App for automatic PR triggers
# GITHUB_APP_ID=<your-app-id>
# GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"
# GITHUB_WEBHOOK_SECRET=<your-webhook-secret>

# -----------------------------
# [OPTIONAL] LangSmith Tracing
# -----------------------------
# Visualize LangGraph execution, debug agents, track performance
# Get from: https://smith.langchain.com -> Settings -> API Keys
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_PROJECT=codeguard-ai
LANGCHAIN_TRACING_V2=true
